# Production Environment Variables
# Copy this file to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (Option 1: Individual params)
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_strong_password

# Database Configuration (Option 2: Connection string - Railway/Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Configuration
JWT_SECRET=generate_random_string_minimum_32_characters_here
JWT_EXPIRES_IN=7d

# Admin Default Credentials (CHANGE THESE!)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_this_strong_password

# CORS Configuration
FRONTEND_URL=https://yourdomain.com
